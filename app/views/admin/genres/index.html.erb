  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2>ジャンル追加・一覧画面</h2>
      <% form_with model: @genres do |f| %>
      <P>ジャンル</P>
          <%= f.text_field :name %>
          <label><%= f.radio_button :is_genres_status, :true %>有効</label>
          <label><%= f.radio_button :is_genres_status, :false %>無効</label>
          <%= f.submit "追加" ,class: "btn btn-primary" %>
      <% end %>
    </div>

    <br>
      <table class="table genre">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <% if genre.is_genres_status %>
                有効
                <% else %>
                無効
                <% end %>
              </td>
              <td><%= link_to "編集する", edit_admins_genre_path(genre.id), class: "btn btn-primary" %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
  </div>
</div>
