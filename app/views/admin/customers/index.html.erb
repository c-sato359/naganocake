  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h2>会員一覧</h2>

      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= customer.last_name+customer.first_name %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted == false %>
                無効
                <% else %>
                有効
                <% end %>
              </td>
            </tr>
            <% end %>
          
        </tbody>
      </table>
　<li><%= link_to admin_customers_edit_path, class: 'nav-link text-light' do %>会員情報編集<% end %></li>
 <li><%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-light' do %>Log out<% end %></li>
    </div>
  </div>
