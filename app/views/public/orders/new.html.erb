<div class= "container">
  <div class="row">
    <div class= "col-xs-7">
      <h3><strong>注文情報入力</strong></h3>
      <h4>支払方法</h4>
      <%= form_with(model: @order, local: true, url: public_orders_confirm_path, method: :post)  do |f| %>
      <%#= f.select :payment_method, options_from_collection_for_select %>
      <label style="margin-left"> <%= f.radio_button :payment_method, "credit_card" %>クレジットカード</labbr><br>
      <label style="margin-left"> <%= f.radio_button :payment_method, "transfer" %>銀行振り込み</labbr>
      <h4><strong>お届け先</strong></h4>
      <%#= f.select :address_id, options_from_collection_for_select(Address.all, :id, :name) %>
      <%#= form_with model: Address.new do |f| %>
    <%#= form_with(model: @address, local:true, url: public_addresses_path, method: :post) do |f| %>
    <div class="row">
      <div class="col-xs-1">
        <%= f.label :郵便番号 %>
      </div>
      <div class="col-xs-2">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>
      <div class="col-xs-1">
        <%= f.label :住所 %>
      </div>
      <div class="col-xs-4">
        <%= f.text_field :address, autofocus: true, autocomplete: "address", :size => "40*40" %>
      </div>
      <div class="col-xs-1">
        <%= f.label :宛名 %>
      </div>
      <div class="col-xs-2">
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
      <div class="col-xs-1">
      <%= f.submit "登録する", class:"btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>