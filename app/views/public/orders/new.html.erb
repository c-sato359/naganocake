<div class="row">
    <h3><strong>注文情報確認</strong></h3>
    <div class="col-xs-9">
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="info">
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td class="text-left">
                <%= cart_item.item.name %>
              </td>
              <td class="text-right">
                ¥<%= ((cart_item.item.price * 1.1).floor).to_s(:delimited, delimiter: ',') %>
              </td>
              <td class="text-right">
                  <%= cart_item.amount %>
              </td>
              <td class="text-right">
                ¥<%= ((cart_item.item.price * 1.1).floor * cart_item.amount).to_s(:delimited, delimiter: ',') %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-3 billing">
      <table class="table table-hover table-condensed table-bordered">
          <tr>
            <th class="info">配送料</th>
            <td class="text-right col-xs-5">
              ¥<%= @order.shipping_cost %>
            </td>
          </tr>
          <tr>
            <th class="info">商品合計</th>
            <td class="text-right">
              ¥<%= @order.total_payment %>
            </td>
          </tr>
          <tr>
            <th class="info">請求金額</th>
            <td class="text-right">
               ¥<%= @order.total_payment %>
            </td>
          </tr>
      </table>
    </div>
    <div class="col-xs-9 billing">
      <table class="table table-hover table-condensed table-bordered">
        <tr>
          <th  class="info">支払方法</th>
          <td class="text-left">
            <%= @order.payment_method %>
          </td>
        </tr>
        <tr>
          <%#= link_to new_public_address_path %> 
        <%#= form_with @address do %>
        <%= form_with url: "new_public_address_path" do |f| %>
        
          <th  class="info">お届け先</th>
        <tr>
        <%= f.label :郵便番号 %>
      </div>
      <div class="col-xs-2">
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>
      <div class="col-xs-1">
        <%= f.label :住所 %>
      </div>
      <div class="col-xs-4">
        <%= f.text_field :address, autofocus: true, autocomplete: "address", :size => "40*40" %>
      </div>
      <div class="col-xs-1">
        <%= f.label :宛名 %>
      </div>
      <div class="col-xs-2">
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
        </tr>
        <% end %>
          </td>
        </tr>
      </table>

      <%= link_to "購入を確定する", public_orders_thanks_path(@orders), class: 'btn btn-primary col-xs-12' %>

    </div>
</div>


