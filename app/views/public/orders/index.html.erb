<div class="row">
	<div class="col-xs-12">
		<h3><strong>注文履歴一覧</strong></h3>
		<table class="table table-bordered table-condensed">
		<tr>
			<th>注文日</th>
			<th>配送日</th>
			<th>注文商品</th>
			<th>支払料金</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
		<% @orders.each do |order| %>
		<tr>
			<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
			<td><%= order.postal_code %><br><%= order.address %></td>
			<td><% order.items.each do |item| %>
				<p><%= item.name %></p><br>
			    <% end %>
			</td>
			<td><%= order.total_payment %></td>
			<td><%= order.status %></td>
			<td><%= link_to "表示する", public_order_path(order.id), class: "btn btn-primary" %></td>
		</tr>
		<% end %>
	</table>
	</div>
</div>
